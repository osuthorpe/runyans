<%= simple_form_for @service do |f| %>

  <%= f.input :title, placeholder: 'Title of the service' %>

  <%= f.input :image, as: :nice_image, required: true, label: false, input_html: { accept: "image/*" } %>

  <%= f.input :description %>

  <%= f.input :body %>

  <%= f.input :order, collection: 1..5, label: 'order of presentation on homepage' %>

  <%= f.input :homepage, label: 'include on homepage' %>

  <%= f.input :status, collection: Feature.statuses.for_select %>

  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
