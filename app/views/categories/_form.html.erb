<%= simple_form_for @category do |f| %>

  <%= f.input :name %>

  <% if @category.id %>
    <% cat = Category.where("id != #{@category.id}") %>
  <% else %>
    <% cat = Category.all %>
  <% end %>

  <%= f.association :parent, collection: cat %>

  <%= f.input :navigation, label: 'include in navigation' %>

  <%= f.input :featured, label: 'include in homepage' %>

  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
