<h1>Category</h1>

<% @categories.each do |category| %>
  <p><%= category.name %>  (<%= link_to "edit", edit_category_path(category) %> | <%= link_to 'delete',  category,  method: :delete, data: { confirm: 'Are you sure?' } %>)</p>
  <% category.children.each do |child| %>
      <p>--<%= child.name %>  (<%= link_to "edit", edit_category_path(child) %> | <%= link_to 'delete',  child,  method: :delete, data: { confirm: 'Are you sure?' } %>)</p>
  <% end %>

<% end %>

<p><%= link_to "New category", new_category_path %></p>
